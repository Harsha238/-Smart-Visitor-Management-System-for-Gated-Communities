    <script>
        function showPortal(portalType) {
            // Hide all portals
            document.getElementById('security-portal').style.display = 'none';
            document.getElementById('admin-portal').style.display = 'none';
            
            // Remove active class from all buttons
            document.querySelectorAll('.portal-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Show selected portal and activate button
            if (portalType === 'security') {
                document.getElementById('security-portal').style.display = 'block';
                document.querySelector('.portal-btn.security').classList.add('active');
            } else {
                document.getElementById('admin-portal').style.display = 'block';
                document.querySelector('.portal-btn.admin').classList.add('active');
            }
        }

        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            const text = document.getElementById('notification-text');
            
            text.textContent = message;
            notification.style.display = 'flex';
            
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }

        function capturePhoto() {
            showNotification('📸 Photo capture feature activated! Camera access requested.');
        }

        function contactResident() {
            const block = document.getElementById('blockNumber').value;
            const flat = document.getElementById('flatNumber').value;
            
            if (!block || !flat) {
                showNotification('⚠️ Please enter block and flat number first.');
                return;
            }
            
            showNotification(`📞 Calling resident at ${block}-${flat}... Please wait.`);
        }

        function sendSMS() {
            const block = document.getElementById('blockNumber').value;
            const flat = document.getElementById('flatNumber').value;
            const visitorName = document.getElementById('visitorName').value;
            
            if (!block || !flat || !visitorName) {
                showNotification('⚠️ Please fill in visitor name, block, and flat number.');
                return;
            }
            
            showNotification(`📱 SMS sent to ${block}-${flat}: "${visitorName} is at the gate requesting entry."`);
        }

        function registerVisitor() {
            const name = document.getElementById('visitorName').value;
            const phone = document.getElementById('visitorPhone').value;
            const block = document.getElementById('blockNumber').value;
            const flat = document.getElementById('flatNumber').value;
            
            if (!name || !phone || !block || !flat) {
                showNotification('⚠️ Please fill in all required fields (Name, Phone, Block, Flat).');
                return;
            }
            
            showNotification(`✅ Visitor ${name} registered successfully! Entry logged at ${new Date().toLocaleTimeString()}.`);
            
            // Clear form
            document.getElementById('visitorName').value = '';
            document.getElementById('visitorPhone').value = '';
            document.getElementById('vehicleNumber').value = '';
            document.getElementById('source').value = '';
            document.getElementById('blockNumber').value = '';
            document.getElementById('flatNumber').value = '';
        }

        // Initialize with security portal active
        showPortal('security');
    </script>
